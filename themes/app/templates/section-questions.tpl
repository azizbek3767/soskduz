{include file="header.tpl" title=$section.meta_title keywords=$section.keywords description=$section.description}<!-- Хлебные крошки -->{include file="modules/you-are-here.tpl" class="breadcrumb-container"}<div class="questions-wrapper">    <div class="container">        <div class="page-name"><h1>{$section.name}</h1>        </div>        <div class="questions-accordion panel-group" id="accordion" role="tablist" aria-multiselectable="true">            {fetch_articles limit=50 assign=sectionQuestions section=$section.sectionId type_content='questions'}            {foreach item=article from=$sectionQuestions name=sectionQuestions}                <div class="panel panel-default">                    <div class="panel-heading">                        <h4 class="panel-title">                            <a role="button" class="collapser" data-href="#prc-{$article.articleId}" data-toggle="collapse" data-parent="#accordion"                               {*href="#prc-{$article.articleId}"*} aria-expanded="false">                                <p>{$article.title}</p><i><span></span><span></span></i>                            </a>                        </h4>                    </div>                    <div id="prc-{$article.articleId}" class="panel-collapse collapsePanel collapse" role="tabpanel">                        <div class="panel-body text-left p-v-10 text-item">{$article.summary nofilter}</div>                    </div>                </div>            {/foreach}        </div>        <div class="faq-form" style="margin-bottom: 20px;">            <div class="name">{$LANG.message_ask_question}</div>            <div class="success-send"><h2>{$LANG.successfully}</h2></div>            <div class="message-send-wait"><h2>{$LANG.message_send_loading}</h2></div>            <form id="send_question" action="{$GLOBAL_URL}/public/send_questions.php" method="POST" enctype="multipart/form-data">                {$csrf_input nofilter}                <div class="faq-form ppl-list">                    <div class="name"></div>                    <table width="100%" style="border-collapse: collapse;">                        <tbody>                        <tr>                            <td style="border-image: initial;"></td>                        </tr>                        <tr>                            <td style="border-image: initial;">                                <div class="input">                                    <label>{$LANG.message_fio}                                        <font color="red">                                            <span class="form-required starrequired">*</span>                                        </font>                                    </label>                                    <input type="text" class="inputtext" name="name" value="" size="0">                                </div>                            </td>                        </tr>                        <tr>                            <td style="border-image: initial;">                                <div class="input">                                    <label>Email                                        <font color="red">                                            <span class="form-required starrequired">*</span>                                        </font>                                    </label>                                    <input type="text" class="inputtext" name="email" value="" size="0">                                </div>                            </td>                        </tr>                        <tr>                            <td style="border-image: initial;">                                <div class="input">                                    <label>{$LANG.message_phone}</label>                                    <input type="text" class="inputtext" name="phone" value="" size="0">                                </div>                            </td>                        </tr>                        <tr>                            <td style="border-image: initial;">                                <div class="input">                                    <label>{$LANG.message_city}                                        <font color="red">                                            <span class="form-required starrequired">*</span>                                        </font>                                    </label>                                    <input type="text" class="inputtext" name="city" value="" size="0"></div>                            </td>                        </tr>                        <tr>                            <td style="border-image: initial;">                                <div class="textarea">                                    <label>{$LANG.message_your_message}</label>                                    <textarea name="message" cols="20" rows="5" class="inputtextarea"></textarea>                                </div>                            </td>                        </tr>                        <tr>                            <td style="border-image: initial;">                                <div id="send-anti-bot">                                    <strong>Текущий <span style="display:inline;">ye@r</span> <span style="display:none;">month</span> <span style="display:none;">day</span></strong>                                    <span class="required">*</span>                                    <input type="hidden" name="anti-bot-a" id="feedback-anti-bot-a" value="{$smarty.now|date_format:'%Y'}"/>                                    <input type="text" name="anti-bot-q" id="feedback-anti-bot-q" value="19"/>                                </div>                            </td>                        </tr>                        <tr>                            <td style="border-image: initial;">                                <p><span class="red">*</span> - {$LANG.message_required} </p>                            </td>                        </tr>                        <tr>                            <td>                                {if $config.allow_recaptcha eq 1}                                    <input type="hidden" id="g-recaptcha-response" name="g-recaptcha-response" />                                {/if}                            </td>                        </tr>                        <tr>                            <td style="border-image: initial;">                                <div class="button"><input type="submit" name="web_form_submit" value="{$LANG.send}"></div>                            </td>                        </tr>                        </tbody>                    </table>                </div>                <script type="text/javascript">                    $('.collapser').click(function () {                        $('.collapsePanel').collapse('hide')                        $($(this).data('href')).collapse('toggle')                    })                </script>                {if $config.allow_recaptcha eq 1}                    <script src="https://www.google.com/recaptcha/api.js?render={$config.recaptcha_public_key}"></script>                    <script type="text/javascript">                        grecaptcha.ready(function() {                            grecaptcha.execute(                                        '{$config.recaptcha_public_key}',                                        {literal}{action: 'homepage'}{/literal}                            ).then(function(token) {                                console.log('token: ', token);                                document.getElementById('g-recaptcha-response').value=token;                            });                        });                    </script>                {/if}            </form>            <div id="bxdynamic_4enrz3_end" style="display:none"></div>        </div>    </div></div>{include file="footer.tpl"}